set number
set encoding=utf-8
set title
set autoindent
set background=dark
set nobackup
set hlsearch
set showcmd
set cmdheight=1
set laststatus=2
set scrolloff=10
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set smartindent
set nowrap
set backspace=start,eol,indent
set splitright
set splitbelow

let g:python_host_prog  = '/usr/bin/python'
let g:python3_host_prog = '/usr/local/bin/python3'

" Import
runtime ./plug.vim

" Colors
colorscheme onedark
